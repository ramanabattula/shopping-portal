pipeline{

    agent any

// uncomment the following lines by removing /* and */ to enable
    tools{
       nodejs 'nodejs' 
    }
  

    stages{
        stage('build-the-app'){
            steps{
                echo 'build-the-app'
                sh 'npm install'
            }
        }
        stage('test-the-app'){
            steps{
                echo 'test-the-app'
                sh 'npm test'
            }
        }
        stage('package-the-app'){
            steps{
                echo 'package-the-app'
                sh 'npm run package '
            }
        }
    }
    
    post{
        always{
            echo 'this pipeline has completed...'
        }
        
    }
    
}

